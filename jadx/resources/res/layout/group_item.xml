<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_item"
    android:background="@drawable/group_focus_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingLeft="17.5dp"
        android:layout_width="175dp"
        android:layout_height="54dp"
        android:minHeight="67dp">
        <ImageView
            android:id="@+id/group_type_icon"
            android:visibility="visible"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginRight="6dp"
            android:src="@mipmap/group_type_favorite"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="18sp"
            android:textColor="#fff"
            android:ellipsize="marquee"
            android:id="@+id/group_name"
            android:paddingTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_toRightOf="@+id/group_type_icon"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
