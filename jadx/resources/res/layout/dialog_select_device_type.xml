<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/color_eb161616"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="20sp"
        android:textColor="@color/player_text_color_ffffff"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/device_type_dialog_title"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/live_icon_bg_start_color"
        android:id="@+id/tv_message"
        android:layout_width="446dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/device_type_dialog_message"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/ll_device_type_tv"
            android:background="@drawable/selector_rb_device_type_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginRight="126dp">
            <ImageView
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_marginTop="33dp"
                android:src="@mipmap/device_tv_2x"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp">
                <ImageView
                    android:id="@+id/tv_selected_icon"
                    android:duplicateParentState="true"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/selector_rb_icon"/>
                <TextView
                    android:textSize="20sp"
                    android:textColor="@color/color_ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="TV"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/ll_device_type_phone"
            android:background="@drawable/selector_rb_device_type_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="160dp"
            android:layout_height="160dp">
            <ImageView
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_marginTop="33dp"
                android:src="@mipmap/device_phone_2x"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp">
                <ImageView
                    android:id="@+id/phone_selected_icon"
                    android:duplicateParentState="true"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/selector_rb_icon"/>
                <TextView
                    android:textSize="20sp"
                    android:textColor="@color/color_ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="Phone"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:textSize="14sp"
        android:textColor="@color/color_ffffff"
        android:id="@+id/btn_confirm"
        android:background="@drawable/selector_device_type_confirm"
        android:layout_width="240dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:text="CONFIRM"/>
</LinearLayout>
