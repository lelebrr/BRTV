<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@mipmap/dialog_bg"
        android:layout_width="382dp"
        android:layout_height="275dp"
        android:weightSum="1">
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/dialog_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/locked"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dialog_title"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/title"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text=""/>
        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="22.5dp"
            android:layout_marginRight="42dp"
            android:layout_marginBottom="15dp">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/dialog_message"
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/Please_Input_Password"/>
            <EditText
                android:textSize="18sp"
                android:textColor="@color/et_text_color"
                android:id="@+id/old_password"
                android:focusable="true"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@+id/message"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:layout_alignParentStart="true"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@android:color/holo_red_light"
                android:id="@+id/error"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.5dp"
                android:text="error"
                android:layout_below="@+id/old_password"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="42dp">
            <Button
                android:textSize="12sp"
                android:textColor="@color/dialog_button"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/positiveButton"
                android:background="@drawable/dialog_btn_bg2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginRight="45dp"
                android:text="@string/Submit"/>
            <Button
                android:textSize="12sp"
                android:textColor="@color/dialog_button"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/negativeButton"
                android:background="@drawable/dialog_btn_bg2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="@string/Cancel"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
