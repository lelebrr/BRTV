<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_vod_detail_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <ImageView
        android:background="@color/color_dd1d1d1d"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/backImage"
        android:paddingRight="18dp"
        android:paddingBottom="18dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="13dp"
        android:src="@mipmap/backlist_button"
        android:scaleType="fitStart"
        android:layout_alignLeft="@+id/vod_image"/>
    <ImageView
        android:id="@+id/vod_image"
        android:layout_width="260dp"
        android:layout_height="360dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="58dp"
        android:scaleType="fitStart"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/detail_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="43dp"
        android:layout_toRightOf="@+id/vod_image"
        android:layout_alignTop="@+id/vod_image">
        <org.bitspark.android.view.AlwaysMarqueeTextView
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:ellipsize="marquee"
            android:id="@+id/vod_detail_name"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Landman"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_ratingbar"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hg_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="14dp"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/color_fdd259"
                android:id="@+id/tv_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">
            <TextView
                android:textSize="11sp"
                android:textColor="@color/color_80ffffff"
                android:id="@+id/vod_tag"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tag"/>
            <TextView
                android:textSize="11sp"
                android:textColor="@color/player_sub_option_text_color_selected"
                android:id="@+id/tv_year"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"/>
        </LinearLayout>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/vod_description"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"/>
        <org.bitspark.android.view.MyProcessRelativeLayout
            android:id="@+id/vod_play"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="gone"
            android:layout_width="84dp"
            android:layout_height="30dp"
            android:layout_marginTop="28dp"
            app:processHeight="3"
            app:radius="5">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:duplicateParentState="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/vod_play_icon"
                    android:duplicateParentState="true"
                    android:layout_width="13dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/vod_play_focus_3x"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/tvPlayer_000000_100"
                    android:id="@+id/tv_play"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.5dp"
                    android:text="@string/Play"/>
            </LinearLayout>
        </org.bitspark.android.view.MyProcessRelativeLayout>
        <ViewStub
            android:id="@+id/vod_vg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"/>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/vod_season_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp">
            <org.bitspark.android.view.LeanbackTabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                app:tabBackground="@color/transparency"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorHeight="0dp"
                app:tabMaxWidth="120dp"
                app:tabMode="scrollable"
                app:tabRippleColor="@null"/>
            <View
                android:id="@+id/season_underline"
                android:background="#29ffffff"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tab_layout"/>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/tab_layout"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
