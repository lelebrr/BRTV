<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:background="@drawable/shape_live_controller_bg"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/si_icon"
        android:background="@drawable/shape_epg_icon_border"
        android:layout_width="108dp"
        android:layout_height="81dp"
        android:layout_marginBottom="52dp"
        android:src="@drawable/home_live_channel_not_uploaded_2x"
        android:layout_marginStart="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedCorner6"/>
    <ImageView
        android:id="@+id/up_arrow"
        android:paddingTop="36dp"
        android:layout_width="78dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/avd_up_anim"
        app:layout_constraintBottom_toTopOf="@+id/si_icon"
        app:layout_constraintEnd_toEndOf="@+id/si_icon"
        app:layout_constraintStart_toStartOf="@+id/si_icon"/>
    <ImageView
        android:id="@+id/down_arrow"
        android:paddingBottom="36dp"
        android:layout_width="78dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/avd_down_anim"
        app:layout_constraintEnd_toEndOf="@+id/si_icon"
        app:layout_constraintStart_toStartOf="@+id/si_icon"
        app:layout_constraintTop_toBottomOf="@+id/si_icon"/>
    <TextView
        android:textSize="22sp"
        android:textColor="@color/tvPlayer_F1F1F1_100"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/tv_live_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:maxWidth="342dp"
        android:text="NBC News HD"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/si_icon"
        app:layout_constraintTop_toTopOf="@+id/si_icon"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="11dp"
        android:progressDrawable="@drawable/progress_drawable"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/si_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_live_name"
        style="@android:style/Widget.ProgressBar.Horizontal"/>
    <ImageView
        android:id="@+id/iv_live"
        android:layout_width="44dp"
        android:layout_height="22dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/tv_live_icon_3x"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/si_icon"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="iv_live,tv_live_channel_name,tv_live_time"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="iv_next,tv_next_channel_name,tv_next_channel_time"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/tvPlayer_F1F1F1_100"
        android:gravity="center"
        android:id="@+id/tv_live_time"
        android:background="@drawable/shape_live_time_tv_bg"
        android:layout_width="92dp"
        android:layout_height="22dp"
        android:text="19:10-19:56"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/iv_live"
        app:layout_constraintTop_toTopOf="@+id/iv_live"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/tvPlayer_F1F1F1_100"
        android:ellipsize="end"
        android:id="@+id/tv_live_channel_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NBC Current Live"
        android:maxLines="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_live_time"
        app:layout_constraintEnd_toStartOf="@+id/iv_next"
        app:layout_constraintStart_toEndOf="@+id/tv_live_time"
        app:layout_constraintTop_toTopOf="@+id/tv_live_time"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/tvPlayer_F1F1F1_100"
        android:ellipsize="end"
        android:id="@+id/tv_next_channel_name"
        android:layout_width="188dp"
        android:layout_height="22dp"
        android:text="NBC News Central"
        android:maxLines="1"
        android:layout_marginEnd="75dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_live"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_live"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/tvPlayer_F1F1F1_100"
        android:gravity="center"
        android:id="@+id/tv_next_channel_time"
        android:background="@drawable/shape_live_time_tv_bg"
        android:layout_width="92dp"
        android:layout_height="22dp"
        android:layout_marginLeft="8dp"
        android:text="19:10-19:56"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_live"
        app:layout_constraintEnd_toStartOf="@+id/tv_next_channel_name"
        app:layout_constraintTop_toTopOf="@+id/iv_live"/>
    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="44dp"
        android:layout_height="22dp"
        android:src="@mipmap/tv_next_icon_3x"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_next_channel_time"
        app:layout_constraintEnd_toStartOf="@+id/tv_next_channel_time"
        app:layout_constraintTop_toTopOf="@+id/tv_next_channel_time"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/live_btn_container_bg"
        android:background="@drawable/shape_live_btn_container_bg"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="@+id/progressBar">
        <CheckBox
            android:id="@+id/cb_collect"
            android:background="@drawable/selector_live_collect"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:button="@null"
            android:layout_marginEnd="4dp"
            app:layout_goneMarginEnd="12dp"/>
        <androidx.mediarouter.app.MediaRouteButton
            android:id="@+id/mrb_live_casting"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:mediaRouteButtonTint="@color/color_ffffff"
            style="@style/MyMediaRouteButton"/>
        <ImageView
            android:id="@+id/iv_live_setting"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/selector_live_setting"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/backImage"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="14dp"
        android:src="@mipmap/backlist_button"
        android:scaleType="fitStart"
        app:layout_constraintStart_toStartOf="@+id/si_icon"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/rv_source"
        android:background="@drawable/shape_live_btn_container_bg"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/live_btn_container_bg"
        app:layout_constraintEnd_toStartOf="@+id/live_btn_container_bg"/>
</androidx.constraintlayout.widget.ConstraintLayout>
