<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/channel_item_content"
    android:background="@drawable/channel_focus_bg"
    android:paddingLeft="18dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="68dp">
    <ImageView
        android:id="@+id/channel_logo"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/channel_logo_holder"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/midLine"
        android:paddingBottom="34dp"
        android:layout_width="1dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/topView"
            android:layout_width="1dp"
            android:layout_height="13dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/channel_type_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/group_type_favorite"
        android:layout_toRightOf="@+id/channel_logo"
        android:layout_alignBottom="@+id/midLine"/>
    <TextView
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:ellipsize="marquee"
        android:id="@+id/channel_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="7.5dp"
        android:layout_marginBottom="-2.5dp"
        android:text=""
        android:singleLine="true"
        android:layout_toRightOf="@+id/channel_type_icon"
        android:layout_alignBottom="@+id/midLine"
        android:marqueeRepeatLimit="marquee_forever"/>
    <TextView
        android:textSize="13sp"
        android:textColor="#cacaca"
        android:ellipsize="marquee"
        android:id="@+id/program_item"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.5dp"
        android:layout_marginRight="7.5dp"
        android:singleLine="true"
        android:layout_toRightOf="@+id/channel_logo"
        android:layout_below="@+id/midLine"
        android:marqueeRepeatLimit="marquee_forever"/>
</RelativeLayout>
