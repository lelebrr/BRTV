<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@mipmap/dialog_bg"
        android:layout_width="500dp"
        android:layout_height="420dp"
        android:scaleX="0.8"
        android:scaleY="0.8">
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">
            <ImageView
                android:id="@+id/dialog_icon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@mipmap/dialog_icon"
                android:layout_centerInParent="true"/>
            <com.dinuscxj.progressbar.CircleProgressBar
                android:id="@+id/dialog_progress"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:max="100"
                android:layout_centerHorizontal="true"
                app1:progress_background_color="#717171"
                app1:progress_end_color="#991094a9"
                app1:progress_start_color="#9985ea92"
                app1:progress_stroke_width="3dp"
                app1:progress_text_color="@color/dialog_title"
                app1:progress_text_size="14dp"
                app1:style="solid_line"/>
        </RelativeLayout>
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dialog_title"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/title"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/update_info"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="22.5dp"
            android:layout_marginRight="42dp">
            <TextView
                android:textSize="17sp"
                android:textColor="@color/dialog_message"
                android:gravity="top|left"
                android:id="@+id/message"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:singleLine="false"
                android:lineSpacingMultiplier="1.5"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="42dp">
            <Button
                android:textSize="15sp"
                android:textColor="@color/dialog_button"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/positiveButton"
                android:background="@drawable/dialog_btn_bg2"
                android:layout_width="127dp"
                android:layout_height="39dp"
                android:text="@string/update_later"/>
            <Button
                android:textSize="15sp"
                android:textColor="@color/dialog_button"
                android:id="@+id/cancelButton"
                android:background="@drawable/dialog_btn_bg2"
                android:layout_width="127dp"
                android:layout_height="39dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/update_skip"/>
            <Button
                android:textSize="15sp"
                android:textColor="@color/dialog_button"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/negativeButton"
                android:background="@drawable/dialog_btn_bg2"
                android:layout_width="127dp"
                android:layout_height="39dp"
                android:text="@string/update_now"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
