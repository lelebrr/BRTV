<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vod_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/vod_layout"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/l1menu"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="87.5dp">
            <ImageButton
                android:id="@+id/searchBtn"
                android:background="@drawable/search_btn_bg"
                android:padding="4dp"
                android:focusable="true"
                android:nextFocusRight="@+id/groupL1_rview"
                android:nextFocusDown="@+id/group_rview"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="2dp"
                android:src="@mipmap/search_icon"
                android:scaleType="fitCenter"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/groupL1_rview"
                android:background="@color/transparency"
                android:nextFocusLeft="@+id/searchBtn"
                android:nextFocusRight="@+id/group_rview"
                android:nextFocusUp="@+id/groupL1_rview"
                android:nextFocusDown="@+id/group_rview"
                android:descendantFocusability="beforeDescendants"
                android:layout_width="match_parent"
                android:layout_height="47.5dp"
                android:layout_marginLeft="17.5dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="40dp"
                android:layout_toRightOf="@+id/searchBtn"/>
            <androidx.recyclerview.widget.RecyclerView
                android:gravity="center"
                android:id="@+id/group_rview"
                android:background="@drawable/selector_transparent"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:nextFocusLeft="@+id/groupL1_rview"
                android:nextFocusUp="@+id/groupL1_rview"
                android:nextFocusDown="@+id/channel_rview"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:descendantFocusability="beforeDescendants"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/groupL1_rview"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/l1menu_v"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:descendantFocusability="beforeDescendants"
            android:layout_width="160dp"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/searchBtn_v"
                android:background="@drawable/selector_search_vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusRight="@+id/group_rview_v"
                android:nextFocusDown="@+id/groupL1_rview_v"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/img_search"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/search_icon"
                    android:scaleType="fitXY"/>
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/setting_text"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46dp"
                    android:text="@string/Search"/>
            </FrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/groupL1_rview_v"
                android:background="@drawable/selector_transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusRight="@+id/group_rview_v"
                android:nextFocusUp="@+id/searchBtn_v"
                android:nextFocusDown="@android:id/keyboardView"
                android:descendantFocusability="beforeDescendants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_below="@+id/searchBtn_v"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:gravity="center"
            android:id="@+id/group_rview_v"
            android:background="@drawable/selector_transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="gone"
            android:nextFocusLeft="@+id/searchBtn_v"
            android:nextFocusDown="@+id/channel_rview"
            android:clipChildren="true"
            android:clipToPadding="true"
            android:descendantFocusability="beforeDescendants"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/keyboard_layout"
            android:background="#ee413d42"
            android:nextFocusRight="@+id/channel_rview"
            android:nextFocusUp="@+id/group_rview"
            android:descendantFocusability="afterDescendants"
            android:layout_width="252dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="107.5dp"
            android:layout_marginBottom="20dp">
            <EditText
                android:textSize="16sp"
                android:textColor="#eeeeee"
                android:textColorHint="#aaaaaa"
                android:id="@+id/searchET"
                android:background="@drawable/search_btn_bg_et"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="@string/search_hint"
                android:inputType="text"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/delete_btn"
                    android:background="@drawable/selector_keyboard_key_num"
                    android:padding="6.5dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:src="@mipmap/search_delete_all"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"/>
                <ImageButton
                    android:id="@+id/backspace_btn"
                    android:background="@drawable/selector_keyboard_key_num"
                    android:padding="6dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:nextFocusLeft="@+id/delete_btn"
                    android:nextFocusUp="@+id/searchET"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:src="@mipmap/search_backspace"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"/>
            </LinearLayout>
            <org.bitspark.android.keyboard.custom.MyKeyBoardView
                android:id="@+id/keyboardView"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="293dp"
                android:importantForAccessibility="yes"
                app:initNumKeyboard="true"
                app:isAbcKeyboardShow="false"
                app:isCharKeyboardShow="false"
                app:isNumKeyboardShow="false"
                app:isSystemKeyboardShow="false"
                app:searchChAppend="@string/search_ch_append"/>
        </LinearLayout>
        <RelativeLayout
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="85dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/keyboard_layout">
            <RelativeLayout
                android:gravity="center"
                android:id="@+id/favorite_hint"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/longpress_icon"
                    android:layout_width="181dp"
                    android:layout_height="154.5dp"
                    android:src="@mipmap/collect_guide"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/white_message_text"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    android:text="@string/favorite_hint"
                    android:layout_below="@+id/longpress_icon"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarStyle="outsideOverlay"
                android:id="@+id/channel_rview"
                android:background="@drawable/selector_transparent"
                android:nextFocusLeft="@android:id/keyboardView"
                android:clipChildren="false"
                android:clipToPadding="true"
                android:descendantFocusability="beforeDescendants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbarFadeDuration="0"/>
        </RelativeLayout>
    </RelativeLayout>
    <org.bitspark.android.view.CircularProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"/>
    <FrameLayout
        android:id="@+id/vod_detail_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
