<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/view_live_setting_fullscreen_0"
    android:layout_width="260dp"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="16dp"
        android:layout_height="18dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/tv_source_icon_3x"
        android:layout_marginStart="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/color_ffffff"
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Display_mode"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_top"
        app:layout_constraintStart_toEndOf="@+id/iv_top"
        app:layout_constraintTop_toTopOf="@+id/iv_top"/>
    <View
        android:id="@+id/divider"
        android:background="@color/color_26dbdbdb"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_top"/>
    <androidx.leanback.widget.VerticalGridView
        android:id="@+id/vg"
        android:layout_width="234dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        style="@style/liveSettingGridStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
