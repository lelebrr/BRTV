<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:background="@mipmap/loginsuccess_2"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <include layout="@layout/new_player_layout"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/fl_drawer"
            android:background="@color/blackAssistText"
            android:visibility="gone"
            android:layout_width="76dp"
            android:layout_height="match_parent">
            <org.bitspark.android.view.AutoLayoutRadioGroup
                android:orientation="vertical"
                android:id="@+id/main_rb"
                android:background="@drawable/shape_leftbg"
                android:layout_width="76dp"
                android:layout_height="match_parent">
                <RadioButton
                    android:id="@+id/rb_home"
                    android:background="@drawable/selector_rb_home_background"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="76dp"
                    android:layout_height="68dp"
                    android:button="@null"
                    app:buttonCompat="@null"/>
                <RadioButton
                    android:id="@+id/rb_menu"
                    android:background="@drawable/selector_rb_menu_background"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="76dp"
                    android:layout_height="68dp"
                    android:button="@null"
                    app:buttonCompat="@null"/>
                <RadioButton
                    android:id="@+id/rb_vod"
                    android:background="@drawable/selector_rb_vod_background"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="76dp"
                    android:layout_height="68dp"
                    android:button="@null"
                    app:buttonCompat="@null"/>
                <RadioButton
                    android:id="@+id/rb_history"
                    android:background="@drawable/selector_rb_history_background"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="76dp"
                    android:layout_height="68dp"
                    android:button="@null"
                    app:buttonCompat="@null"/>
                <RadioButton
                    android:id="@+id/rb_user"
                    android:background="@drawable/selector_rb_user_background"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="76dp"
                    android:layout_height="68dp"
                    android:button="@null"
                    app:buttonCompat="@null"/>
                <RadioButton
                    android:id="@+id/rb_apps"
                    android:background="@drawable/selector_rb_apps_background"
                    android:paddingLeft="2.5dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:visibility="gone"
                    android:layout_width="76dp"
                    android:layout_height="68dp"
                    android:button="@null"
                    app:buttonCompat="@null"/>
                <RadioButton
                    android:id="@+id/rb_setting"
                    android:background="@drawable/selector_rb_setting_background"
                    android:paddingLeft="2.5dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="76dp"
                    android:layout_height="68dp"
                    android:button="@null"
                    app:buttonCompat="@null"/>
                <ImageView
                    android:id="@+id/rs_logo"
                    android:visibility="visible"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitEnd"/>
            </org.bitspark.android.view.AutoLayoutRadioGroup>
        </FrameLayout>
        <org.bitspark.android.view.MyViewPager
            android:id="@+id/main_vp"
            android:background="@color/transparency"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/user_center_txt_color"
                    android:id="@+id/loading"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:text="@string/loading"/>
            </LinearLayout>
        </org.bitspark.android.view.MyViewPager>
    </LinearLayout>
    <include layout="@layout/info_layout"/>
    <include layout="@layout/debug_layout"/>
</FrameLayout>
