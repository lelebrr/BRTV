<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/history_unfocus_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:minHeight="80dp">
        <TextView
            android:textSize="9sp"
            android:textColor="#afffffff"
            android:ellipsize="marquee"
            android:id="@+id/visit_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.5dp"
            android:layout_marginBottom="3.5dp"
            android:text="d MMM HH:mm"
            android:singleLine="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="19sp"
            android:textColor="#fff"
            android:ellipsize="marquee"
            android:id="@+id/history_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3.5dp"
            android:text="@string/no_watching_history"
            android:singleLine="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#afffffff"
            android:ellipsize="marquee"
            android:id="@+id/program_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.5dp"
            android:layout_marginBottom="3.5dp"
            android:text="@string/program"
            android:singleLine="true"
            android:layout_centerVertical="true"/>
    </LinearLayout>
</RelativeLayout>
