<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/player_process_bar"
    android:visibility="invisible"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/seekbar_layout"
        android:background="@mipmap/full_screen_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/tv_click"
            android:layout_alignLeft="@+id/bottom_layout">
            <ImageView
                android:id="@+id/vod_back_image"
                android:paddingLeft="0dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@mipmap/backlist_button"
                android:scaleType="fitStart"/>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/color_fbfbfb"
                android:ellipsize="end"
                android:id="@+id/program_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="name"
                android:singleLine="true"/>
        </LinearLayout>
        <androidx.mediarouter.app.MediaRouteButton
            android:id="@+id/cast_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/ll_top"
            app:mediaRouteButtonTint="@color/white"
            style="@style/MyMediaRouteButton"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/color_fbfbfb"
            android:id="@+id/tv_tip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginRight="40dp"
            android:text="@string/to_call_more_function"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/iv_tip1"
            android:background="@drawable/icon_meau"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_tip1"
            android:layout_alignTop="@+id/tv_tip1"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/color_fbfbfb"
            android:gravity="center"
            android:id="@+id/tv_tip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/or"
            android:layout_toLeftOf="@+id/iv_tip1"
            android:layout_alignTop="@+id/iv_tip1"/>
        <ImageView
            android:id="@+id/iv_tip2"
            android:background="@drawable/icon_dpad_down"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_tip2"
            android:layout_alignTop="@+id/tv_tip2"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/color_fbfbfb"
            android:gravity="center"
            android:id="@+id/tv_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/click"
            android:layout_toLeftOf="@+id/iv_tip2"
            android:layout_alignTop="@+id/tv_tip2"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="42dp"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/icon_play"
                android:padding="10dp"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/selector_icon_play"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/color_fbfbfb"
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="00:00:00"/>
            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:maxHeight="5dp"
                android:minHeight="5dp"
                android:layout_weight="1"
                style="@style/newSeekbarTheme"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/color_fbfbfb"
                android:id="@+id/tv_vod_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="00:00:00"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/player_text_color_ffffff"
            android:gravity="center"
            android:id="@+id/longPressedProgressTv"
            android:background="@drawable/player_shape_long_press_textview_bg"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginLeft="85dp"
            android:layout_marginBottom="70dp"
            android:text="00:00"
            android:layout_alignLeft="@+id/bottom_layout"
            android:layout_alignParentBottom="true"
            android:paddingStart="21dp"
            android:paddingEnd="21dp"/>
        <ImageView
            android:id="@+id/bottom_arrow"
            android:padding="10dp"
            android:layout_width="58dp"
            android:layout_height="36dp"
            android:layout_marginBottom="6dp"
            android:src="@mipmap/player_down_3x"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/function_layout"
        android:background="@mipmap/full_screen_dark_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.leanback.widget.HorizontalGridView
            android:id="@+id/hg_season"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="48dp"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/hg_vod_episode"/>
        <androidx.leanback.widget.HorizontalGridView
            android:id="@+id/hg_vod_episode"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/hg_vod_menu"/>
        <androidx.leanback.widget.HorizontalGridView
            android:id="@+id/hg_vod_menu"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="48dp"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/seekbar_function"/>
        <SeekBar
            android:id="@+id/seekbar_function"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="32dp"
            android:maxHeight="5dp"
            android:minHeight="5dp"
            android:layout_alignParentBottom="true"
            style="@style/newSeekbarThemeNoThumb"/>
    </RelativeLayout>
</RelativeLayout>
