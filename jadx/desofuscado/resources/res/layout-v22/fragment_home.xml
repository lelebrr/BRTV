<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/home_banner_title_text"
            android:gravity="center"
            android:id="@+id/home_banner_title"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:lines="1"
            android:layout_centerHorizontal="true"
            android:layerType="software"/>
        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:background="@drawable/home_banner_bg"
            android:padding="2.5dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="true"
            android:layout_width="805dp"
            android:layout_height="305dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/home_banner_title"
            android:layout_centerHorizontal="true"
            app:banner_infinite_loop="true"
            app:banner_loop_time="5000"
            app:banner_radius="0dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@+id/banner">
            <ImageView
                android:id="@+id/unsername_icon"
                android:paddingLeft="1.5dp"
                android:paddingTop="1dp"
                android:paddingRight="1.5dp"
                android:paddingBottom="1dp"
                android:visibility="visible"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/home_user_info"
                android:paddingHorizontal="1.5dp"
                android:paddingVertical="1dp"/>
            <TextView
                android:textSize="20sp"
                android:textColor="@color/user_center_txt_color"
                android:gravity="center"
                android:id="@+id/home_username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="my_userid"
                android:layout_toRightOf="@+id/unsername_icon"/>
            <ImageView
                android:id="@+id/expire_icon"
                android:paddingLeft="1.5dp"
                android:paddingTop="1dp"
                android:paddingRight="1.5dp"
                android:paddingBottom="1dp"
                android:visibility="visible"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:src="@mipmap/home_expire_time"
                android:layout_toRightOf="@+id/home_username"
                android:paddingHorizontal="1.5dp"
                android:paddingVertical="1dp"/>
            <TextView
                android:textSize="20sp"
                android:textColor="@color/user_center_txt_color"
                android:gravity="center"
                android:id="@+id/home_expire"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="2012/12/12"
                android:layout_toRightOf="@+id/expire_icon"/>
            <ImageView
                android:id="@+id/home_loading_icon"
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:src="@mipmap/user_checked_bg"
                android:layout_toLeftOf="@+id/home_loading_text"/>
            <TextView
                android:textSize="20sp"
                android:textColor="@color/user_center_txt_color"
                android:gravity="center"
                android:id="@+id/home_loading_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:text="@string/loading"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:background="@mipmap/home_banner_mask"
            android:layout_width="800dp"
            android:layout_height="300dp"
            android:layout_marginTop="7.5dp"
            android:layout_below="@+id/home_banner_title"
            android:layout_centerHorizontal="true"/>
        <com.youth.banner.indicator.RectangleIndicator
            android:id="@+id/indicator"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="12.5dp"
            android:layout_below="@+id/banner"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/vod_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
