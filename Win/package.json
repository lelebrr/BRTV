{
  "name": "mtech-launcher",
  "version": "1.0.0",
  "description": "Mtech TV Launcher for Windows 11",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "make": "electron-forge make"
  },
  "author": "Mtech",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.0.0",
    "@electron-forge/maker-squirrel": "^7.0.0",
    "@electron-forge/maker-zip": "^7.0.0",
    "electron": "^28.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Mtech",
        "icon": "./assets/icon",
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Mtech",
            "setupIcon": "./assets/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": ["win32"]
        }
      ]
    }
  }
}
